# Jira Configuration
# Copy this file to .env and fill in your actual values

# Your Jira site name (the part before .atlassian.net)
# Example: if your Jira URL is https://mycompany.atlassian.net, then JIRA_SITE=mycompany
JIRA_SITE=your-site-name

# Your Jira account email
JIRA_EMAIL=your-email@example.com

# Your Jira API token
# Get it from: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_API_TOKEN=your-api-token-here

# Optional: Project to monitor (can be overridden via command line)
DEFAULT_PROJECT=PROJECT1

# Optional: Confidence threshold (default is 75)
CONFIDENCE_THRESHOLD=75

# Optional: Similarity threshold (default is 0.85)
SIMILARITY_THRESHOLD=0.85